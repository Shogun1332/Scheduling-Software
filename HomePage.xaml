<Window x:Class="C969___Scheduling_Software.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C969___Scheduling_Software"
        mc:Ignorable="d"
        Title="Dom's Cool Scheduler - Home Page" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="AppointmentCollectionViewSource"
                              CollectionViewType="ListCollectionView"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Button x:Name="homeButton"
                Content="Home"
                Grid.Column="1"
                Grid.Row="1"
                Height="30"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="homeButton_Click"/>
        <Button x:Name="apptButton"
                Content="Appointments"
                Grid.Column="1"
                Grid.Row="2"
                Height="30"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="apptButton_Click"/>
        <Button x:Name="customerButton"
                Content="Customers"
                Grid.Column="1"
                Grid.Row="3"
                Height="30"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="customerButton_Click"/>
        <Button x:Name="calendarButton"
                Content="Calendar"
                Grid.Column="1"
                Grid.Row="4"
                Height="30"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="calendarButton_Click"/>
        <Button x:Name="reportsButton"
                Content="Reports"
                Grid.Column="1"
                Grid.Row="5"
                Height="30"
                Width="150"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="reportsButton_Click"/>
        <Label Content="Upcoming Appointments"
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="250,0,0,0"
               FontSize="24"/>
        <DataGrid x:Name="homeDataGrid"
                  ItemsSource="{Binding}"
                  DataContext="{StaticResource AppointmentCollectionViewSource}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="3"
                  Grid.RowSpan="4"
                  Margin="180,0,-60,0"/>
        <Rectangle x:Name="noAppointmentsRectangle"
                   Grid.Column="1"
                   Grid.ColumnSpan="3"
                   Grid.Row="2"
                   Grid.RowSpan="4"
                   Margin="180,0,-60,0"
                   Fill="LightGray"
                   Visibility="Hidden"/>
        <Label x:Name="noAppointmentsLabel"
               Content="No Appointments scheduled in the next 15 minutes."
               Grid.Column="1"
               Grid.ColumnSpan="2"
               Grid.Row="3"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="250,0,0,0"
               FontSize="16"
               Visibility="Hidden"/>

        <!--DataContext="{StaticResource AppointmentCollectionViewSource}"-->
    </Grid>
</Window>
